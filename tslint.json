{
  "extends": "tslint:recommended",
  "rulesDirectory": ["src"],
  "rules": {
      "max-line-length": {
          "options": [220]
      },
      "new-parens": true,
      "ordered-imports": false,
      "quotemark": false,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-console": {
          "severity": "warning",
          "options": [
              "debug",
              "info",
              "log",
              "time",
              "timeEnd",
              "trace"
          ]
      }
  },
  "jsRules": {
      "max-line-length": {
          "options": [220]
      }
  }
}